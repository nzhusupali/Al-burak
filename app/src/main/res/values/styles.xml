<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ET_PreOrder_AddCar" parent="editText">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/black
        </item>
    </style>

    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/editText_height</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:paddingStart">@dimen/standard_padding</item> // Чтобы были отступы слева для текста
        <item name="android:background">@drawable/edit_text_add_ad_background</item>
    </style>

    <style name="ET_alert_item" parent="editText">
        <item name="android:focusable">false</item>
        <item name="android:enabled">false</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:background">@drawable/alert_item_background</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="ET_end_preOrder">
        <item name="android:windowSoftInputMode">stateHidden</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/black
        </item>
    </style>

    <style name="ET_Complete_AddCar" parent="editText">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/text_view_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="sum_ClientList">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TitleText_detailClient">
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="changeText_detailClient">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">22dp</item>
        <item name="android:layout_marginStart">130dp</item>
    </style>

    <style name="btn_alert_edit_item">
        <item name="background">@drawable/alert_item_background</item>
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textColor">@color/ButtonTextColor</item>
    </style>

</resources>