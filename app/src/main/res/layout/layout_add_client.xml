<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tomlonghurst.expandablehinttext.ExpandableHintText
        android:id="@+id/employee"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Имя работника"
        android:text="test1"
        android:textColor="@android:color/white"
        app:floatingLabelColor="@color/purple_500"
        app:image="@drawable/ic_person"
        app:imageColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:textBoxColor="@color/purple_200" />

    <com.tomlonghurst.expandablehinttext.ExpandableHintText
        android:id="@+id/carName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:hint="Марка машины"
        android:text="test1"

        android:textColor="@android:color/white"
        app:floatingLabelColor="@color/purple_500"
        app:image="@drawable/ic_car"
        app:imageColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:textBoxColor="@color/purple_200" />

    <com.tomlonghurst.expandablehinttext.ExpandableHintText
        android:id="@+id/stateNumber"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="208dp"
        android:text="test1"

        android:hint="Государственный номер"
        android:textColor="@android:color/white"
        app:floatingLabelColor="@color/purple_500"
        app:image="@drawable/ic_country"
        app:imageColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:textBoxColor="@color/purple_200" />

    <com.tomlonghurst.expandablehinttext.ExpandableHintText
        android:id="@+id/workType"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="296dp"
        android:hint="Вид работы"
        android:text="test1"

        android:textColor="@android:color/white"
        app:floatingLabelColor="@color/purple_500"
        app:image="@drawable/ic_task_build"
        app:imageColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:textBoxColor="@color/purple_200" />

</androidx.constraintlayout.widget.ConstraintLayout>