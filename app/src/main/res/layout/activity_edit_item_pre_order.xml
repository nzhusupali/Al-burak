<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditPreOrderItem">

    <TextView
        style="@style/TitleText_detailClient"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:text="@string/CarBrand"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <AutoCompleteTextView
        android:id="@+id/carName_edit_preOrder"
        style="@style/ET_Complete_AddCar"
        android:layout_marginTop="62dp"
        android:autofillHints="@string/CarBrand"
        android:drawableStart="@drawable/ic_car"
        android:hint="@string/CarBrand"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/TitleText_detailClient"
        android:layout_marginStart="16dp"
        android:layout_marginTop="118dp"
        android:text="@string/client_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/clientName_edit_preOrder"
        style="@style/ET_PreOrder_AddCar"
        android:autofillHints="@string/FinalSum"
        android:drawableStart="@drawable/ic_person"
        android:hint="@string/client_name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/carName_edit_preOrder"
        app:layout_constraintStart_toStartOf="@+id/carName_edit_preOrder"
        app:layout_constraintTop_toBottomOf="@+id/carName_edit_preOrder" />

    <TextView
        style="@style/TitleText_detailClient"
        android:layout_marginStart="16dp"
        android:layout_marginTop="192dp"
        android:text="@string/phone_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/number_edit_preOrder"
        style="@style/ET_PreOrder_AddCar"
        android:layout_marginTop="24dp"
        android:autofillHints="@string/Notes"
        android:drawableStart="@drawable/ic_phone"
        android:hint="@string/phone_number"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/clientName_edit_preOrder"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/clientName_edit_preOrder"
        app:layout_constraintTop_toBottomOf="@+id/clientName_edit_preOrder" />

    <TextView
        style="@style/TitleText_detailClient"
        android:layout_marginStart="16dp"
        android:layout_marginTop="266dp"
        android:text="@string/StateNumberCar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/stateNumber_edit_preOrder"
        style="@style/ET_Complete_AddCar"
        android:autofillHints="@string/StateNumberCar"
        android:drawableStart="@drawable/ic_country"
        android:hint="@string/StateNumberCar"
        app:layout_constraintEnd_toEndOf="@+id/number_edit_preOrder"
        app:layout_constraintStart_toStartOf="@+id/number_edit_preOrder"
        app:layout_constraintTop_toBottomOf="@+id/number_edit_preOrder"
        tools:ignore="TextFields" />

    <TextView
        style="@style/TitleText_detailClient"
        android:layout_marginStart="16dp"
        android:layout_marginTop="340dp"
        android:text="@string/FinalSum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sum_edit_preOrder"
        style="@style/ET_Complete_AddCar"
        android:autofillHints="@string/FinalSum"
        android:drawableStart="@drawable/ic_cash"
        android:ems="10"
        android:hint="@string/FinalSum"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/stateNumber_edit_preOrder"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/stateNumber_edit_preOrder"
        app:layout_constraintTop_toBottomOf="@+id/stateNumber_edit_preOrder"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        style="@style/TitleText_detailClient"
        android:layout_marginStart="16dp"
        android:layout_marginTop="414dp"
        android:text="@string/datePicker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dateBtn_edit_preOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/white"
        android:drawablePadding="20dp"
        android:paddingStart="10dp"
        android:hint="@string/choiceDataPreOrder"
        app:drawableStartCompat="@drawable/ic_date"
        app:layout_constraintEnd_toEndOf="@+id/sum_edit_preOrder"
        app:layout_constraintStart_toStartOf="@+id/sum_edit_preOrder"
        app:layout_constraintTop_toBottomOf="@+id/sum_edit_preOrder" />


    <TextView
        style="@style/TitleText_detailClient"
        android:layout_marginStart="16dp"
        android:layout_marginTop="462dp"
        android:text="@string/Notes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/workType_edit_preOrder"
        style="@style/ET_Complete_AddCar"
        android:autofillHints="@string/Notes"
        android:drawableStart="@drawable/ic_task_build"
        android:hint="@string/Notes"
        app:layout_constraintEnd_toEndOf="@+id/dateBtn_edit_preOrder"
        app:layout_constraintStart_toStartOf="@+id/dateBtn_edit_preOrder"
        app:layout_constraintTop_toBottomOf="@+id/dateBtn_edit_preOrder" />

    <Button
        android:id="@+id/save_edit_preOrder"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/save"
        android:textColor="@color/ButtonTextColor"
        app:backgroundTint="@color/ButtonColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/workType_edit_preOrder" />

</androidx.constraintlayout.widget.ConstraintLayout>